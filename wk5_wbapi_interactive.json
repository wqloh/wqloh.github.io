{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A scatterplot showing horsepower and miles per gallons for various cars.",
    "data": {
        "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/misc/WorldBank%20API%20Example/gdp_co2_pop_region.csv"
    },
    "title": {
        "text": "Output: economic and environmental",
        "subtitle": [
            "GDP per capita (2021 PPP) and CO2 emissions, (excluding land use change and forestry)",
            "Source: World Bank",
            ""
        ],
        "anchor": "start",
        "frame": "group"
    },
    "mark": {
        "type": "circle",
        "tooltip": true
    },
    "view": {
        "strokeOpacity": 0
    },
    "width": 400,
    "height": 400,
    "params": [
        {
            "name": "Year",
            "value": 2019,
            "bind": {
                "input": "range",
                "min": 1990,
                "max": 2022,
                "step": 1
            }
        }
    ],
    "transform": [
        {
            "filter": "year(datum.date) == Year & datum.co2 > 0"
        }
    ],
    "encoding": {
        "x": {
            "field": "gdp_pc",
            "title": "GDP Per Capita, 2021 PPP (log scale)",
            "type": "quantitative",
            "axis": {
                "gridOpacity": 0.3,
                "format": "$,.0f",
                "titleFontWeight": "normal"
            },
            "scale": {
                "type": "log",
                "domain": [
                    250,
                    200000
                ]
            }
        },
        "y": {
            "field": "co2",
            "title": "C02 per capita (log scale)",
            "type": "quantitative",
            "axis": {
                "titleFontWeight": "normal",
                "gridOpacity": 0.3
            },
            "scale": {
                "type": "log",
                "domain": [
                    0.01,
                    100
                ]
            }
        },
        "size": {
            "field": "pop",
            "title": "Population",
            "scale": {
                "domain": [
                    0,
                    1500000000
                ]
            },
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "country"
            },
            {
                "field": "pop",
                "type": "quantitative",
                "format": ","
            }
        ],
        "color": {
            "field": "region",
            "title": "Region"
        }
    }
}
